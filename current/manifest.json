{
  "manifest_version": 2,
  "name": "__MSG_manifestExtName__",
  "version": "1.0.0",
  
  "default_locale": "en",
  
  "description" : "__MSG_manifestExtDescription__",
  
  "icons": { 
    "16": "static/images/manifest/16x16.png", 
    "48": "static/images/manifest/48x48.png", 
    "128": "static/images/manifest/128x128.png" 
  },
  
  "browser_action": {
    "default_icon": {
      "16": "static/images/manifest/16x16.png",
      "48": "static/images/manifest/348x48.png"
    },
    "default_title": "__MSG_manifestBrowserActionButton__",
    "default_popup": "static/templates/popup.html"
  },
  
  "content_scripts": [
    {
      "js": [ 
        "static/scripts/config.js",
        "static/scripts/app.js",
        "static/scripts/content_scripts.js"
      ],
      "css": [ 
        "static/styles/main.css"
      ],
      "matches": [ "*://*/*" ]
    }
  ],
  
  "background": {
    "page": "static/templates/background.html"
  },
  
  "permissions": [ 
    "cookies", 
    "storage", 
    "tabs", 
    "activeTab",
    "contextMenus",
    "http://*/*", 
    "https://*/*" 
  ],
  
  "web_accessible_resources": [
    "manifest.json",
    "static/images/app/logo.png"
  ]
  
}